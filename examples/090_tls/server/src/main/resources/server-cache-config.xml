<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
        xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>storage-scheme</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <distributed-scheme>
            <scheme-name>storage-scheme</scheme-name>
            <service-name>Storage</service-name>
            <autostart>true</autostart>
        </distributed-scheme>

        <proxy-scheme>
            <service-name>Proxy</service-name>
            <acceptor-config>
                <tcp-acceptor>
                    <socket-provider system-property="coherence.extend.socket.provider"/>
                    <local-address>
                        <address system-property="coherence.extend.address">0.0.0.0</address>
                        <port system-property="coherence.extend.port">20000</port>
                    </local-address>
                </tcp-acceptor>
            </acceptor-config>
            <load-balancer>client</load-balancer>
            <autostart>true</autostart>
        </proxy-scheme>
    </caching-schemes>
</cache-config>
