<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.oracle.coherence.examples</groupId>
    <artifactId>simple-coherence</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0</version>

    <description>Oracle Coherence Simple Kubernetes Example</description>
    <name>Simple Coherence</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <!--  The Coherence jar version (compile time dependency) -->
        <coherence.version>21.06.1</coherence.version>

        <version.lib.glassfish.jmxmp>1.0-b01-ea</version.lib.glassfish.jmxmp>
        <version.plugin.jib>3.1.4</version.plugin.jib>
    </properties>

    <dependencies>
        <!-- core Coherence functionality -->
        <dependency>
            <groupId>com.oracle.coherence.ce</groupId>
            <artifactId>coherence</artifactId>
            <version>${coherence.version}</version>
        </dependency>
        <!-- Coherence Management over REST -->
        <dependency>
            <groupId>com.oracle.coherence.ce</groupId>
            <artifactId>coherence-management</artifactId>
            <version>${coherence.version}</version>
        </dependency>
        <!-- Coherence Metrics - can be removed after Coherence CE 21.06.2 -->
        <dependency>
            <groupId>com.oracle.coherence.ce</groupId>
            <artifactId>coherence-metrics</artifactId>
            <version>${coherence.version}</version>
        </dependency>
        <!-- JMXMP transport to make using JMX in containers easier -->
        <dependency>
            <groupId>org.glassfish.external</groupId>
            <artifactId>opendmk_jmxremote_optional_jar</artifactId>
            <version>${version.lib.glassfish.jmxmp}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <version>${version.plugin.jib}</version>
                <configuration>
                    <from>
                        <!-- The base image to use - this is a distroless Java image
                             (i.e. it has core linux and Java so is more secure) -->
                        <image>gcr.io/distroless/java:11</image>
                    </from>
                    <to>
                        <!-- The name of the image to build - this uses the Maven module name -->
                        <image>${project.artifactId}:${project.version}</image>
                    </to>
                    <container>
                        <!-- The class to run when starting the image -->
                        <mainClass>com.tangosol.net.Coherence</mainClass>
                        <format>OCI</format>
                    </container>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
